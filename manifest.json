{
  "manifest_version": 3,
  "name": "Scrambled Webs",
  "version": "1.0",
  "description": "Drag and reposition elements on any webpage",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": [
    "<all_urls>",
    "https://scrambledwebs.fun/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
